{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "ChatModel": "deepseek-llm",
    "EmbeddingModel": "nomic-embed-text",
    "Temperature": 0.7,
    "MaxTokens": 2000,
    "ContextWindow": 4096,
    "RequestTimeout": 300,
    "StreamingEnabled": true
  },
  "VectorDatabase": {
    "Type": "Qdrant",
    "ConnectionString": "http://localhost:6333",
    "CollectionName": "documents",
    "VectorSize": 768,
    "Distance": "Cosine"
  },

  "RAG": {
    "ChunkSize": 800,
    "ChunkOverlap": 200,
    "TopK": 5,
    "MinRelevanceScore": 0.7,
    "MaxContextLength": 3000,
    "EnableReranking": false
  },

  "DocumentProcessing": {
    "AllowedExtensions": [ ".pdf", ".docx", ".txt", ".md" ],
    "MaxFileSizeMB": 10,
    "UploadPath": "uploads",
    "ProcessedPath": "processed"
  },

  "ConnectionStrings": {
    "sqlConnection": "Server=localhost;Database=SQL2025;Trusted_Connection=true;TrustServerCertificate=true;"
  },

  "AI": {
    "UseOllama": true,
    "OllamaUrl": "http://localhost:11434/api/chat",
    "OllamaModel": "deepseek-r1:8b"
  },
  "CORS": {
    "AllowedOrigins": [
      "https://localhost:7136",
      "http://localhost:5000"
    ]
  },

  "Chat": {
    "MaxConversationHistory": 10,
    "ConversationTimeoutMinutes": 30,
    "EnableConversationLogging": true
  }

}

